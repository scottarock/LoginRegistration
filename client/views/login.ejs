<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <div class="wrapper">
      <h1>Login Page</h1>
      <p>Login here if you already have an account</p>
      <a class="navigation" href="/">Home</a>
      <hr>
      <fieldset>
        <legend>Login</legend>
        <form action="/user/login" method="post">
          <div>
            <label for="email">Email</label>
            <input
              type="text"
              name="email"
              <% if ( data.email ) { %>
                value="<%= data.email %>"
              <% } %>
            >
          </div>
          <div>
            <label for="">Password</label>
            <input type="password" name="password">
          </div>
          <% if ( data.messages ) {%>
            <div class="warning">
              <% for ( message of data.messages ) { %>
                <p><%= message %></p>
              <% } %>
            </div>
          <% } %>
          <button>Login</button>
        </form>
      </fieldset>
    </div>
  </body>
</html>
